{
  "manifest_version": 3,
  "name": "Quản lý Tab", 
  "version": "1.0",
  "description": "Xem, ghim, đánh dấu sao và đóng các tab đang mở trong side panel.",
"permissions": [
  "sidePanel",
  "tabs",
  "bookmarks",
  "storage" 
],
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "images/logo.png",
      "48": "images/logo.png",
      "128": "images/logo.png"
    }
  },
  "side_panel": {
    "default_path": "sidepanel/sidepanel.html"
  },
  "icons": {
    "16": "images/logo.png",
    "48": "images/logo.png",
    "128": "images/logo.png"
  }
}
